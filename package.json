{
    "name": "wm-apigw-actions-register-api",
    "version": "v1",
    "description": "Registers an API project in wM API Gateway",
    "main": "index.js",
    "scripts": {
        "lint": "eslint **.js",
        "test": "jest --coverage --verbose",
        "ncc": "ncc build index.js -o dist",
        "all": "npm run lint && npm test && npm run ncc",
        "before": "touch .commit",
        "after": "if [ -e .commit ] then rm.commit && git add dist/index.js && git commit --amend -C HEAD --no-verify; fi"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jiridj/wm-apigw-actions-register-api.git"
    },
    "keywords": [
        "webMethods",
        "API Gateway",
        "GitHub",
        "Actions"
    ],
    "author": "jiri.dejagere@softwareag.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jiridj/wm-apigw-actions-register-api/issues"
    },
    "homepage": "https://github.com/jiridj/wm-apigw-actions-register-api#readme",
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@jiridj/wm-apigw-config-sdk": "^0.1.7"
    },
    "devDependencies": {
        "eslint": "^8.15.0",
        "jest": "^27.5.1",
        "post-commit": "^0.0.1",
        "pre-commit": "^1.2.2"
    },
    "pre-commit": [
        "before",
        "lint",
        "test",
        "ncc"
    ],
    "post-commit": [
        "after"
    ]
}
